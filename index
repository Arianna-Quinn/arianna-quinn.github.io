<script>
    // Example of interactive graphics using Canvas
    var canvas = document.getElementById("myCanvas");
    var ctx = canvas.getContext("2d");
    ctx.fillStyle = "#0095DD";
    ctx.fillRect(50, 50, 150, 100);

    // Function to run the code from textarea
    function runCode() {
        var code = document.getElementById("code-editor").value;
        try {
            eval(code);
        } catch (e) {
            alert('Error in the code: ' + e.message);
        }
    }

    // Example data manipulation
    var dataOutput = document.getElementById("data-output");
    dataOutput.textContent = JSON.stringify({
        name: "Sample Data",
        value: 42,
        description: "This is a sample data object"
    }, null, 2);
</script>

